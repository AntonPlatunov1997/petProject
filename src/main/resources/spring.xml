<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">


    <import resource="loggers.xml"/>

    <bean id="client" class="entities.Client">
        <property name="greeting" value="Hello there"/>
        <constructor-arg value="1"/>
        <constructor-arg value="J.Smith"/>
    </bean>

    <bean id="event" class="entities.Event" scope="prototype">
        <constructor-arg>
            <bean class="java.util.Date"/>
        </constructor-arg>
        <constructor-arg ref="dateFormat"/>
    </bean>

    <bean id="dateFormat" class="java.text.DateFormat"
          factory-method="getDateTimeInstance"/>





    <!--<bean id="app" class="App">-->
        <!--<constructor-arg ref="client"/>-->
        <!--<constructor-arg ref="eventLogger"/>-->
    <!--</bean>-->

    <bean id="app" class="App">
        <constructor-arg ref="client"/>
        <constructor-arg ref="consoleEventLogger"/>
      <constructor-arg>
          <map>
              <entry key="INFO"
                     value-ref="consoleEventLogger"/>
              <entry key="ERROR"
                     value-ref="combinedEventLogger"/>
          </map>
      </constructor-arg>
    </bean>


</beans>




