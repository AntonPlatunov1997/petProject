<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <alias name="client" alias="clientAlias"/>

    <!--added name for bean-->
    <bean id="client" name="changedClient" class="Client">
        <constructor-arg value="1"/>
        <constructor-arg value="J.Smith"/>
    </bean>


    <bean id="eventLogger" class="ConsoleEventLogger"/>

    <bean id="event" class="Event" scope="prototype">
        <constructor-arg>
            <bean class="java.util.Date"/>
        </constructor-arg>
        <constructor-arg>
            <bean class="java.text.DateFormat"
                  factory-method="getDateTimeInstance"/>
        </constructor-arg>
    </bean>

    <bean id="app" class="App">
        <constructor-arg ref="client"/>
        <constructor-arg ref="eventLogger"/>
    </bean>

    <bean id="fileEventLogger" class="FileEventLogger"
          init-method="init"/>

</beans>




