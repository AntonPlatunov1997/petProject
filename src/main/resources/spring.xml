<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util.xsd">


    <import resource="loggers.xml"/>

    <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="locations">
            <list>
                <value>classpath:client.properties</value>
            </list>
        </property>
        <property name="ignoreResourceNotFound" value="true" />
        <property name="systemPropertiesMode">
            <util:constant
                    static-field="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer.SYSTEM_PROPERTIES_MODE_OVERRIDE" />
        </property>
    </bean>


    <bean id="client" class="entities.Client">
        <constructor-arg index="0" value="${id}" />
        <constructor-arg value="${name}" />
       <property name="greeting" value="${greeting}"/>

    </bean>

    <bean id="event" class="entities.Event" scope="prototype">
        <constructor-arg>
            <bean class="java.util.Date"/>
        </constructor-arg>
        <constructor-arg ref="dateFormat"/>
    </bean>

    <bean id="dateFormat" class="java.text.DateFormat"
          factory-method="getDateTimeInstance"/>





    <!--<bean id="app" class="App">-->
        <!--<constructor-arg ref="client"/>-->
        <!--<constructor-arg ref="eventLogger"/>-->
    <!--</bean>-->

    <bean id="app" class="App">
        <constructor-arg ref="client"/>
        <constructor-arg ref="consoleEventLogger"/>
      <constructor-arg>
          <map>
              <entry key="INFO"
                     value-ref="consoleEventLogger"/>
              <entry key="ERROR"
                     value-ref="combinedEventLogger"/>
          </map>
      </constructor-arg>
    </bean>


</beans>




